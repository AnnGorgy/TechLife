
@{
    ViewBag.Title = "Register";
}


    <body>
        <div class="col-lg-12 col-md-12 col-sm-12 ">
            <div class="container-fluid">

                <h1 style="margin: auto;float: initial;color: #bb495a;font-size: 40px;margin-top: 50px;padding: 10px 0;margin-left: 470px;"> Registration </h1>
                <hr style="background-color:#bb495a;height:3px; text-align:center;width:350px;  margin-left:410px;" />
                <br />
                <div class="row" style="margin-left:430px;">


                    <div>
                        <label class="la" for="exampleInputEmail1">First Name </label>
                        <div class="input-group mb-3">
                            <input class="In" type="text" placeholder="Enter Your First Name" name="fname">
                        </div>
                    </div>


                    <div>
                        <label class="la" for="exampleInputEmail1">Last Name</label>
                        <div class="input-group mb-3">
                            <input class="In" type="text" placeholder="Enter Your Last Name" name="lname">
                        </div>
                    </div>

                    <div>
                        <label class="la" for="exampleInputEmail1">Username</label>
                        <div class="input-group mb-3">
                            <input class="In" type="text" placeholder="Enter Your Username" name="uname">
                           
                        </div>
                    </div>

                    <div>
                        <label class="la" for="exampleInputEmail1">Email address</label>
                        <div class="input-group mb-3">
                            <input class="In" type="text" class="form-control" placeholder="Your Email">
                            <div class="input-group-append">
                                <span style="height:30px;" class="input-group-text">.com</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="la" for="exampleInputPassword1">Password</label>
                        <div class="input-group mb-3">
                            <input class="In" type="password" id="exampleInputPassword1" placeholder="Password" name="password">
                        </div>
                        <div>
                            <input class="btn btn-secondary" type="button" id="myBtn" name=" " value="Submit" onclick="window.location.href = 'http://localhost:5817/Home/displays'" />
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
    </body>

