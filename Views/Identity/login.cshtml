
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Partiallogin.cshtml";
}


<head>
    <style>
        .bodylogin {
           
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            position: fixed;
            background-image: url('/Images/Elec_login.jpeg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }
        .login-box {
            width: 400px;
            height: 420px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            color: white;
            text-align: center;
        }

    .login-box h1 {
        margin: auto;
        width: 50%;
        float: initial;
        font-size: 40px;
        border-bottom: 2px solid #bb495a;
        margin-bottom: 50px;
        padding: 10px 0;
        color: #bb495a;
    }

.textbox {
    width: 80%;
    overflow: hidden;
    font-size: 20px;
    margin-left: 40px;
    border-bottom: 1px solid #bb495a;
    text-align: center;
    margin-bottom: 20px;
}


    .textbox i {
        width: 26px;
        float: left;
        text-align: center;
    }

    .textbox input {
        border: none;
        outline: none;
        background: none;
        color: #bb495a;
        font-size: 18px;
        width: 40%;
        float: left;
        margin: 0 30px;
    }

.bttn {
    width: 80%;
    background: none;
    border: 2px solid #bb495a;
    color: #bb495a;
    padding: 5px;
    font-size: 18px;
    cursor: pointer;
    margin: 6px 0;
    text-align: center;
    margin-top: 40px;
}

    .bttn:hover {
        color: lightgray;
    }
    </style>
</head>

<body class="bodylogin">
    <div class="login-box">
        <h1>Login</h1>
        <div class="textbox">
            <i class="far fa-user"></i>
            <input type="text" placeholder="Username" name="" value="">
        </div>



        <div class="textbox">
            <i class="fas fa-unlock-alt"></i>
            <input type="password" placeholder="Password" name="" value="">
        </div>


        <input class="bttn" type="button" value="Sign in" onclick="window.location.href = 'http://localhost:44304/Home'" />
    </div>

</body>